<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.post.MakePost">


    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">




        <TextView
            android:id="@+id/name_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Name"
            android:textSize="15dp">

        </TextView>


        <Button
            android:id="@+id/place_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:text="place">

        </Button>


    </LinearLayout>

    <EditText
        android:id="@+id/Ed_WritePost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout"
        tools:ignore="MissingConstraints">

    </EditText>

    <ImageView
        android:id="@+id/iv_publication"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/Ed_WritePost"
        tools:ignore="MissingConstraints">

    </ImageView>


    <ImageButton
        android:id="@+id/ib_publication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_publication"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_image_post"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="50dp">

    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>